<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	style="@style/OnboardingTheme.Root"
	android:id="@+id/frg_onboarding"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		style="@style/OnboardingTheme.TextView.Title"
		android:id="@+id/grade_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/grade_title"
		/>

	<TextView
		style="@style/OnboardingTheme.TextView.Subtitle"
		android:id="@+id/grade_subtitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/grade_subtitle"
		/>

	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:scrollbars="vertical">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- Boulder -->
			<LinearLayout
				android:id="@+id/boulder_grade_root"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/tiny"
				android:orientation="vertical"
				android:visibility="gone">
				<TextView
					style="@style/OnboardingTheme.TextView.Section"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/boulder"
					/>
				<include
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					layout="@layout/view_grade_choice_boulder"
					/>
				<TextView
					style="@style/OnboardingTheme.TextView.Example"
					android:id="@+id/grade_example_boulder"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal"
					/>
			</LinearLayout>

			<!-- Sport -->
			<LinearLayout
				android:id="@+id/sport_grade_root"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/tiny"
				android:orientation="vertical"
				android:visibility="gone">
				<TextView
					style="@style/OnboardingTheme.TextView.Section"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/sport"
					/>
				<include
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					layout="@layout/view_grade_choice_sport"
					/>
				<TextView
					style="@style/OnboardingTheme.TextView.Example"
					android:id="@+id/grade_example_sport"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal"
					/>
			</LinearLayout>

			<!-- Top rope -->
			<LinearLayout
				android:id="@+id/top_rope_grade_root"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/tiny"
				android:orientation="vertical"
				android:visibility="gone">
				<TextView
					style="@style/OnboardingTheme.TextView.Section"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/top_rope"
					/>
				<include
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					layout="@layout/view_grade_choice_top_rope"
					/>
				<TextView
					style="@style/OnboardingTheme.TextView.Example"
					android:id="@+id/grade_example_top_rope"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal"
					/>
			</LinearLayout>

			<!-- Trad -->
			<LinearLayout
				android:id="@+id/trad_grade_root"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/tiny"
				android:orientation="vertical"
				android:visibility="gone">
				<TextView
					style="@style/OnboardingTheme.TextView.Section"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/trad"
					/>
				<include
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					layout="@layout/view_grade_choice_trad"
					/>
				<TextView
					style="@style/OnboardingTheme.TextView.Example"
					android:id="@+id/grade_example_trad"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal"
					/>
			</LinearLayout>

		</LinearLayout>
	</androidx.core.widget.NestedScrollView>

</LinearLayout>
