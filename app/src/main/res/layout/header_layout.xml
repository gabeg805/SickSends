<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="200dp"
	android:background="@mipmap/smaller_drawer_background"
	android:paddingBottom="@dimen/normal"
	android:paddingLeft="@dimen/normal"
	android:paddingRight="@dimen/normal"
	android:paddingTop="@dimen/normal"
	android:gravity="bottom"
	android:id="@+id/nav_header_layout"
	android:clickable="true">

	<ImageView
		android:id="@+id/nav_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_above="@+id/nav_title"
		android:maxWidth="@dimen/isz_attention"
		android:maxHeight="@dimen/isz_attention"
		android:adjustViewBounds="true"
		android:scaleType="fitCenter"
		android:src="@mipmap/palette"
		/>

	<TextView
		android:id="@+id/nav_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_above="@+id/nav_subtitle"
		android:paddingTop="10dp"
		android:textSize="@dimen/tsz_title"
		android:textColor="@color/white"
		android:text="@string/app_name"
		android:textAppearance="@style/TextAppearance.AppCompat.Body1"
		/>

	<TextView
		android:id="@+id/nav_subtitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:textColor="@color/white"
		android:textSize="@dimen/tsz_small"
		android:text="Gabriel Gonzalez"
		/>

</RelativeLayout>
