	<!-- Root layout -->
	<style name="OnboardingTheme.Root">
		<item name="android:padding">@dimen/border</item>
	</style>


	<!-- TEXT -->
	<style name="OnboardingTheme.TextView" parent="Base.Widget.AppCompat.TextView">
	</style>

	<style name="OnboardingTheme.TextView.Title">
		<item name="android:layout_gravity">center</item>
		<item name="android:layout_marginBottom">@dimen/spacing</item>
		<item name="android:textSize">@dimen/text_size_title</item>
	</style>

	<style name="OnboardingTheme.TextView.Subtitle">
		<item name="android:layout_marginBottom">24dp</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">@dimen/text_size_normal</item>
		<item name="android:alpha">@dimen/alpha_subtitle</item>
	</style>

	<style name="OnboardingTheme.TextView.Section">
		<item name="android:layout_marginTop">@dimen/spacing</item>
		<item name="android:textSize">@dimen/text_size_normal</item>
		<item name="android:alpha">@dimen/alpha_section</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="OnboardingTheme.TextView.Example">
		<item name="android:paddingBottom">@dimen/spacing</item>
		<item name="android:textSize">@dimen/text_size_small</item>
		<item name="android:textStyle">bold</item>
	</style>



	<!-- SCROLLVIEW -->
	<style name="OnboardingTheme.HorizontalScroll">
		<item name="android:paddingTop">@dimen/spacing</item>
		<item name="android:paddingBottom">@dimen/spacing_close</item>
	</style>



	<!-- SWITCH -->
	<style name="OnboardingTheme.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
		<item name="android:paddingTop">@dimen/spacing</item>
		<item name="android:paddingBottom">@dimen/spacing</item>
		<item name="android:paddingStart">22dp</item>
		<item name="android:paddingEnd">10dp</item>
		<item name="android:textColor">@color/charcoal</item>
		<item name="android:textSize">@dimen/text_size_section</item>
		<item name="switchMinWidth">56dp</item>
	</style>



	<!-- BUTTON -->
	<style name="OnboardingTheme.Button" parent="Base.Widget.AppCompat.Button">
		<item name="android:background">?android:selectableItemBackground</item>
	</style>

	<style name="OnboardingTheme.Button.Navigation">
		<item name="android:paddingStart">@dimen/spacing</item>
		<item name="android:paddingEnd">@dimen/spacing</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:textSize">@dimen/text_size_small</item>
	</style>

	<style name="OnboardingTheme.Button.Toggle" parent="Widget.MaterialComponents.Button.OutlinedButton">
		<item name="materialThemeOverlay">@style/OnboardingTheme.Button.ToggleOverlay</item>
	</style>

	<style name="OnboardingTheme.Button.ToggleOverlay">
		<item name="colorPrimary">?attr/colorSecondary</item>
	</style>

</resources>
